{
  "name": "ts-video-player",
  "version": "0.1.0",
  "description": "A modern, framework-agnostic video player with deep stx integration",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": [
    "./dist/cdn.min.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./elements": {
      "types": "./dist/elements/index.d.ts",
      "import": "./dist/elements/index.js"
    },
    "./features": {
      "types": "./dist/features/index.d.ts",
      "import": "./dist/features/index.js"
    },
    "./cdn": {
      "import": "./dist/cdn.min.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./stx": {
      "types": "./dist/stx/index.d.ts",
      "import": "./dist/stx/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js"
    },
    "./providers/*": {
      "types": "./dist/providers/*.d.ts",
      "import": "./dist/providers/*.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "stx": ">=0.65.0"
  },
  "peerDependenciesMeta": {
    "stx": {
      "optional": true
    }
  },
  "keywords": [
    "video",
    "player",
    "media",
    "hls",
    "dash",
    "youtube",
    "vimeo",
    "stx",
    "web-components",
    "accessibility",
    "streaming",
    "captions",
    "subtitles",
    "thumbnails",
    "chapters",
    "airplay",
    "chromecast",
    "analytics",
    "ads",
    "vast",
    "vpaid",
    "watermark",
    "i18n",
    "themes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stacksjs/ts-video-player"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-video-player/issues"
  },
  "homepage": "https://github.com/stacksjs/ts-video-player#readme"
}
